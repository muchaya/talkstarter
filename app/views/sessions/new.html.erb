<%= link_to "talkstarter.", root_path, class: "tracking-tight text-xl italic font-bold block text-center py-8" %>

<div class="mx-auto w-3/8 rounded-2xl border border-gray-200 bg-white p-8">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-extrabold text-4xl tracking-tight">Log in to continue</h1>
  <p class="mt-8 mb-12 tracking-tight">Welcome back, let's get you in.</p>

  <%= form_with url: session_url, class: "" do |form| %>
    <div class="my-4">
      <%= link_to "#", class: "py-3 rounded-md block border border-gray-600" do %>
        <div class="flex items-center w-fit mx-auto gap-x-2">
          <%= inline_svg_tag "google_color.svg", class: "w-5" %>
          <p class="font-medium tracking-tight text-[15px]">Continue with Google</p>
        </div>
      <% end %>
    </div>

    <div class="my-4">
      <%= link_to "#", class: "py-3 rounded-md block border border-gray-600" do %>
        <div class="flex items-center w-fit mx-auto gap-x-2">
          <%= inline_svg_tag "facebook_color.svg", class: "w-6" %>
          <p class="font-medium tracking-tight text-[15px]">Continue with Facebook</p>
        </div>
      <% end %>
    </div>

    <div class="flex items-center gap-x-2 my-6">
      <div class="border-b border-gray-400 h-[1px] w-full"></div>
      <p>or</p>
      <div class="border-b border-gray-400 h-[1px] w-full"></div>
    </div>

    <div class="my-5">
      <%= form.email_field :email_address, required: true, autocomplete: "username", placeholder: "Enter your email address", class: "block rounded-md border border-gray-400 focus:border-gray-600 focus:border-2 outline-0 px-3 py-4 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "block rounded-md border border-gray-400 focus:border-gray-600 focus:border-2 outline-0 px-3 py-4 mt-2 w-full" %>
    </div>

    <%= form.submit "Log in", class: "w-full text-center rounded-md py-3 text-base bg-orange text-white font-medium cursor-pointer" %>

    <%= link_to "Forgot password?", new_password_path, class: "mt-6 font-medium text-[13px] block text-gray-700 underline underline-offset-4 decoration-gray-400 hover:no-underline" %>

    <div class="flex items-center mt-5 text-[13px] text-gray-700 gap-x-1 font-medium">
      <p class="">Don't have an account?</p>
      <%= link_to "Sign up", new_registration_path, class: "underline underline-offset-4 decoration-gray-400 hover:no-underline" %>
    </div>

    <p class="text-[13px] font-medium mt-6">By continuing, you agree to Talkstarter's terms and privacy policy.</p>
    
    <div class="col-span-6 sm:flex sm:items-center sm:gap-4">
 

      <div class="mt-4 text-sm text-gray-500 sm:mt-0">
        
      </div>
    </div>
  <% end %>
</div>
